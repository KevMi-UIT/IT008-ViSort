<Window x:Class="ViSort.Windows.VisualiseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ViSort.Windows"
        mc:Ignorable="d"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="Visualise Window"
        Height="600"
        Width="800"
        Background="#FFD8FFDD" WindowState="Maximized"
        ResizeMode="NoResize">
    <Grid>
        <Grid Margin="0,92,0,-9">
            <Canvas x:Name="SortVisualisation"
                    Width="780"
                    Height="Auto"
                    Background="#FF767575"
                    Margin="10,0,10,27" />
            <RichTextBox x:Name="CodeDisplay"
      
                         Margin="545,22,25,322"
                         IsReadOnly="True" />
        </Grid>
        <Button x:Name="PlayPauseButton"
                Content="Play"
                Height="30"
                Width="60"
                Margin="37,50,0,0"
                Click="PlayButton_Click"
                VerticalAlignment="Top" />
        <WrapPanel HorizontalAlignment="Left"
                   Margin="176,13,0,497"
                   Height="Auto"
                   Width="Auto">
            <Slider x:Name="SpeedSlider"
                    Height="30"
                    Width="180"
                    Minimum="10"
                    Maximum="100"
                    TickFrequency="10"
                    TickPlacement="BottomRight"
                    ValueChanged="SpeedSlider_ValueChanged"
                    Foreground="White"
                    LargeChange="10" 
                    SmallChange="10" />
            <ui:NumberBox x:Name="SpeedNumberBox"
                     PlaceholderText="Speed"
                     Height="40"
                     Width="Auto"
                     HorizontalAlignment="Left"
                     Margin="10,0,0,0"
                     FontSize="12"
                     BorderThickness="2,2,2,2"
                     LostFocus="SpeedNumberBox_LostFocus"
                     KeyDown="SpeedNumberBox_KeyDown"
                     PreviewTextInput="SpeedNumberBox_PreviewTextInput" />
        </WrapPanel>
        <Grid Height="100"
              Width="NaN"
              VerticalAlignment="Top" Margin="465,0,0,0">
            <Label x:Name="AlgorithmName"
                   Content="Name"
                   Height="30"
                   Width="Auto"
                   Foreground="White"
                   Margin="0,31,246,0" HorizontalAlignment="Right" VerticalAlignment="Top" />
            <Label x:Name="TimeComplexity"
                   Content="Time"
                   Height="30"
                   Width="Auto"
                   Foreground="White"
                   Margin="0,16,156,0" HorizontalAlignment="Right" VerticalAlignment="Top" />
            <Label x:Name="SpaceComplexity"
                   Content="Space"
                   Height="30"
                   Width="Auto"
                   Foreground="White"
                   Margin="0,60,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" />
        </Grid>
    </Grid>
</Window>