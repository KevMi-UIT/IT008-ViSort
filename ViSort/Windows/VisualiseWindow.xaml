<Window
    x:Class="ViSort.Windows.VisualiseWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ViSort.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="ViSort - Visualise"
    Width="800"
    Height="600"
    Background="#FFD8FFDD"
    Icon="/Resources/Logo/visort_logo.ico"
    ResizeMode="NoResize"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Grid>
        <Grid Margin="0,92,0,-9">
            <Canvas
                x:Name="SortVisualisation"
                Width="780"
                Height="Auto"
                Margin="10,0,10,27"
                Background="#FF767575" />
            <RichTextBox
                x:Name="CodeDisplay"
                Margin="545,22,25,322"
                IsReadOnly="True" />
        </Grid>
        <Button
            x:Name="PlayPauseButton"
            Width="60"
            Height="30"
            Margin="37,50,0,0"
            VerticalAlignment="Top"
            Click="PlayButton_Click"
            Content="Play" />
        <WrapPanel
            Width="Auto"
            Height="Auto"
            Margin="176,13,0,497"
            HorizontalAlignment="Left">
            <Slider
                x:Name="SpeedSlider"
                Width="180"
                Height="30"
                Foreground="White"
                LargeChange="10"
                Maximum="100"
                Minimum="10"
                SmallChange="10"
                TickFrequency="10"
                TickPlacement="BottomRight"
                ValueChanged="SpeedSlider_ValueChanged" />
            <ui:NumberBox
                x:Name="SpeedNumberBox"
                Width="Auto"
                Height="40"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                BorderThickness="2,2,2,2"
                FontSize="12"
                KeyDown="SpeedNumberBox_KeyDown"
                LostFocus="SpeedNumberBox_LostFocus"
                PlaceholderText="Speed"
                PreviewTextInput="SpeedNumberBox_PreviewTextInput" />
        </WrapPanel>
        <Grid
            Width="NaN"
            Height="100"
            Margin="465,0,0,0"
            VerticalAlignment="Top">
            <Label
                x:Name="AlgorithmName"
                Width="Auto"
                Height="30"
                Margin="0,31,246,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Content="Name"
                Foreground="White" />
            <Label
                x:Name="TimeComplexity"
                Width="Auto"
                Height="30"
                Margin="0,16,156,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Content="Time"
                Foreground="White" />
            <Label
                x:Name="SpaceComplexity"
                Width="Auto"
                Height="30"
                Margin="0,60,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Content="Space"
                Foreground="White" />
        </Grid>
    </Grid>
</Window>